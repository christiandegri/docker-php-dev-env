# Set your applications path.
# In container they will be located in /var/www folder.
HOST_APPLICATIONS_PATH=./../docker-projects

# Data storage path on host machine.
# Used by all storage systems.
HOST_DATA_SAVE_PATH=./data

### NGINX ###
NGINX_HOST_HTTP_PORT=80
NGINX_HOST_HTTPS_PORT=443
NGINX_HOST_LOG_PATH=./logs/nginx/
NGINX_HOST_SITES_PATH=./nginx/sites-available/

### MYSQL ###
MYSQL_DATABASE=app_db
MYSQL_USER=default
MYSQL_PASSWORD=secret
MYSQL_HOST_PORT=3306
MYSQL_ROOT_PASSWORD=root

### REDIS ###
REDIS_HOST_PORT=6379
